    <script>
        // List of cities from Telangana and Andhra Pradesh
        const locations = [
            "Hyderabad", "Warangal", "Vijayawada", "Visakhapatnam", 
            "Nellore", "Guntur", "Kakinada", "Khammam", "Rajahmundry",
            "Srikakulam", "Kadapa", "Bhimavaram", "Tirupati"
        ];

        function filterLocations() {
            const input = document.getElementById('delivery-location').value.toLowerCase();
            const filteredLocations = locations.filter(location => location.toLowerCase().includes(input));
            showLocationSuggestions(filteredLocations);
        }

        function showLocationSuggestions(locations) {
            const listElement = document.getElementById('location-list');
            listElement.innerHTML = '';
            locations.forEach(location => {
                const listItem = document.createElement('li');
                listItem.textContent = location;
                listItem.onclick = function() {
                    document.getElementById('delivery-location').value = location;
                    listElement.innerHTML = ''; // Hide the list after selection
                };
                listElement.appendChild(listItem);
            });
        }
    </script>
